<resources>
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#E53935</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="questionHeaders">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#D84315</item>
        <item name="android:paddingTop">6dp</item>
    </style>
        
    <style name="questions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#2196F3</item>
        <item name="android:textColor">#D84315</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="RadioButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#2196F3</item>
        <item name="android:textColor">#FFF</item>
    </style>

   <style name="textHint">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">#FFFFFF</item>
   </style>

    <style name="submitButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_below">@id/linearLayout</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">#FF3D00</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
